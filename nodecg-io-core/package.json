{
    "name": "nodecg-io-core",
    "version": "0.2.0",
    "description": "The core of nodecg-io. Connects everything up.",
    "homepage": "https://nodecg.io/RELEASE",
    "author": {
        "name": "CodeOverflow team",
        "url": "https://github.com/codeoverflow-org"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/codeoverflow-org/nodecg-io.git",
        "directory": "nodecg-io-core"
    },
    "files": [
        "extension/**/*.js",
        "extension/**/*.js.map",
        "extension/**/*.d.ts",
        "index.js",
        "index.js.map",
        "index.d.ts",
        "*.json"
    ],
    "scripts": {
        "test": "jest",
        "watchTest": "jest --watch",
        "coverage": "jest --coverage"
    },
    "keywords": [
        "nodecg-io",
        "nodecg-bundle"
    ],
    "nodecg": {
        "compatibleRange": "^1.1.1",
        "mount": [
            {
                "directory": "../node_modules",
                "endpoint": "modules"
            }
        ],
        "dashboardPanels": [
            {
                "name": "nodecg-io",
                "title": "nodecg-io",
                "file": "panel.html",
                "fullbleed": true,
                "headerColor": "#525F78"
            }
        ]
    },
    "license": "MIT",
    "devDependencies": {
        "@types/crypto-js": "^4.0.1",
        "@types/jest": "^27.0.1",
        "@types/node": "^15.0.2",
        "jest": "^27.0.6",
        "nodecg-types": "^1.8.2",
        "typescript": "^4.2.4",
        "ts-jest": "^27.0.3"
    },
    "dependencies": {
        "ajv": "^8.2.0",
        "crypto-js": "^4.0.0",
        "tslib": "^2.2.0"
    }
}
